[alias]
    cm = commit --cleanup=whitespace --no-status
    graph = log --graph --all --oneline --decorate
    mg = "!f() { [ $2 ] && git checkout $1 && git merge $2; }; f"
    svncm = svn dcommit --rmdir
    ur = "!f() { [ $2 ] && git update-ref `git show-ref $1 | head -n 1 | awk '{print $2}'` $2; }; f"

[color]
    ui = auto

[core]
    autocrlf = false
    editor = vim
    whitespace = cr-at-eol

[diff]
    tool = vimdiff

[push]
    default = upstream

